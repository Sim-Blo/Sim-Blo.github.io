---
// src/pages/index.astro
import Layout from '../layouts/layout.astro';
import Pricing from '../components/pricing.astro';
import Portfolio from '../components/portfolio.astro';
---

<Layout title="Simon Blondeel | Développeur Web Freelance & Création de Sites">
	<main class="relative w-full overflow-hidden">
        
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] bg-blue-600/20 blur-[120px] rounded-full pointer-events-none z-0"></div>

		<section class="relative z-10 flex flex-col items-center justify-center min-h-screen pt-24 px-4 text-center max-w-5xl mx-auto">
			
            <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight text-white mb-8 leading-tight">
				Création de sites web <br class="hidden md:block" />
				<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400">
					pour artisans & pros.
				</span>
			</h1>

            <div class="max-w-3xl mb-12">
                <p class="text-lg md:text-xl text-slate-300 mb-8 leading-relaxed">
                     Je conçois des sites internet <strong>conçus pour convertir vos prospects en clients :</strong>
                </p>
                
                <div class="flex flex-wrap justify-center gap-x-10 gap-y-4 text-slate-400 text-sm md:text-base font-medium">
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-blue-500 shadow-[0_0_10px_rgba(59,130,246,0.5)]"></span>
                        Vitesse de chargement record
                    </span>
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)]"></span>
                        Design pro & rassurant
                    </span>
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-blue-500 shadow-[0_0_10px_rgba(59,130,246,0.5)]"></span>
                        Visibilité mobile & SEO
                    </span>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
				<a href="#portfolio" class="px-8 py-4 rounded-lg bg-blue-600 hover:bg-blue-500 text-white font-semibold transition-all shadow-lg shadow-blue-600/25">
					Voir mes réalisations
				</a>
				<a href="#contact" class="px-8 py-4 rounded-lg bg-slate-900 border border-slate-800 hover:bg-slate-800 text-white font-semibold transition-all">
					Discuter de mon projet
				</a>
			</div>

            <div class="mt-20 pt-8 border-t border-slate-800/50 flex flex-col md:flex-row gap-8 text-slate-500 text-sm">
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                    <span>Fiabilité 100%</span>
                </div>
                <div class="flex items-center gap-2">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                    <span>Optimisé pour Google</span>
                </div>
                 <div class="flex items-center gap-2">
                     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
                    <span>Zéro abonnement caché</span>
                </div>
            </div>
		</section>

        <Portfolio />

        <Pricing />

	</main>
</Layout>