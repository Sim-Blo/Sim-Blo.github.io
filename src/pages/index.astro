---
// src/pages/maintenance.astro
import Layout from '../layouts/layout.astro'; // Assure-toi que le chemin est correct
---

<Layout title="Maintenance | Simon Blondeel">
    <Fragment slot="head">
        <meta name="robots" content="noindex, nofollow" />
        <meta name="description" content="Le site de Simon Blondeel est actuellement en maintenance pour améliorer votre expérience. Nous revenons très vite !" />
        <meta property="og:title" content="Maintenance | Simon Blondeel" />
        <meta property="og:description" content="Amélioration en cours. Nous revenons très vite !" />
        <meta property="og:image" content="https://simonblondeel.fr/og-image.jpg" /> <meta property="og:url" content="https://simonblondeel.fr/maintenance" />
    </Fragment>

    <main class="relative h-screen flex items-center justify-center text-center text-white overflow-hidden bg-slate-950">
        <div class="absolute inset-0 z-0 bg-gradient-to-br from-slate-950 via-slate-900 to-blue-900/10 opacity-70 animate-pulse-bg"></div>

        <div class="relative z-10 p-8 bg-black/40 rounded-xl max-w-2xl mx-auto backdrop-blur-sm border border-white/20">
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-24 w-24 mx-auto text-blue-500 mb-6 animate-spin-slow" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor" 
                stroke-width="1.5"
            >
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 animate-fade-in-up">
                Site en maintenance
            </h1>
            <p class="text-xl md:text-2xl font-light mb-8 text-slate-300 animate-fade-in-up delay-200">
                Nous sommes en train d'améliorer votre expérience.
                <br>
                Revenez nous voir très vite !
            </p>
            <p class="text-md text-slate-400">
                En attendant, vous pouvez me contacter :
                <br>
                <a href="mailto:contact@simonblondeel.fr" class="text-blue-400 hover:text-blue-300 transition-colors underline">contact@simonblondeel.fr</a>
            </p>
        </div>
    </main>
</Layout>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes spinSlow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    @keyframes pulseBg {
        0% { opacity: 0.7; }
        50% { opacity: 0.85; }
        100% { opacity: 0.7; }
    }
    .animate-fade-in-up {
        animation: fadeIn 0.8s ease-out forwards;
        opacity: 0;
    }
    .delay-200 { animation-delay: 0.2s; }
    .animate-spin-slow {
        animation: spinSlow 15s linear infinite; /* Rotation lente et continue */
    }
    .animate-pulse-bg {
        animation: pulseBg 10s infinite alternate ease-in-out; /* Battement subtil du fond */
    }
</style>